{
"compilerOptions": {
    "module": "Node16",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "types/",
    "esModuleInterop": true,
    "outDir": "lib/",
    "rootDir": "src/",
    "target": "ES2019",
    "strict": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "incremental": true,
    "tsBuildInfoFile": "types/tsconfig.tsbuildinfo",
    "noErrorTruncation": true,
    "stripInternal": true,
    "forceConsistentCasingInFileNames": true
  },
  "typedocOptions": {
    "excludeExternals": true,
    "includeVersion": true,
    "entryPoints": ["src/index.ts"],
    "name": "compilers",
    "out": "docs/build/",
    "readme": "README.md"
  },
  "include": [
    "src/**/*.ts",
    "src/lib/*.c",
    "src/lib/*.h",
  ],
  "exclude": ["node_modules", "types/", "myfile.ts"]
}